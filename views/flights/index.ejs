<%- include('../layout', { title: 'All Flights' }) %>

<h1>All Flights</h1>
<p>Below are all the flights held in our database. Click deails for more info & to view tickets.</p>

<table class="flight-table">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Flight No.</th>
      <th>Airport</th>
      <th>Departs</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(flight => { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.departs %></td>
        <td><a href="/flights/<%= flight._id %>">Details</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>
